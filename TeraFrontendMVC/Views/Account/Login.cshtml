@model TeraFrontendMVC.Models.Account.Login

<div class="form-container">
    <div class="login-container">
        <form id="loginForm" asp-action="Login" method="post">

            <h2>Iniciar Sesión</h2>

            @* Email Input *@
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            @* Password Input *@
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            @* Submit Button *@
            <button type="submit">Iniciar Sesión</button>
        </form>
    </div>
    <div class="account-container">
        <div class="main-text-container">
            <p>
                Bienvenido a la plataforma Elección 2024, Accede a datos electorales, consulta resultados regionales y 
                colabora en la construcción de una visión transparente para Elección 2024. Solo necesitas una cuenta para ser parte.
            </p>
        </div>
        <div class="new-account-container">
            <p>¿No tienes cuenta? Regístrate ahora, es rapido y sencillo</p>
        </div>
        <div class="forget-password-container">
            <p>¿Olvidaste tu contraseña? Recupérala fácilmente aquí.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
