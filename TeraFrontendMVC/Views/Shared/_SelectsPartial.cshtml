@model SelectsViewModel

<h3>Seleccione Estado, Municipio y Parroquia</h3>

<!-- Select para Estados -->
<label>Estado</label>
<select id="selectEstado">
    <option value="">Seleccione un estado</option>
    @foreach (var estado in Model.States)
    {
        <option value="@estado.CodEdo">@estado.Nombre</option>
    }
</select>

<!-- Select para Municipios -->
<label>Municipio</label>
<select id="selectMunicipio">
    <option value="">Seleccione un municipio</option>
    @foreach (var municipio in Model.Municipalities)
    {
        <option value="@municipio.CodMun">@municipio.Nombre</option>
    }
</select>

<!-- Select para Parroquias -->
<label>Parroquia</label>
<select id="selectParroquia">
    <option value="">Seleccione una parroquia</option>
    @foreach (var parroquia in Model.Parishes)
    {
        <option value="@parroquia.CodPar">@parroquia.Nombre</option>
    }
</select>
